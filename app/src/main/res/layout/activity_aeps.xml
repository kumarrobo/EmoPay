<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.AepsActivity"
    android:layout_gravity="center">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    <ImageView
        android:id="@+id/iv_aeps"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/aeps"
        android:scaleType="centerInside"
        tools:ignore="MissingConstraints"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/iv_aeps"
        android:gravity="center"
        android:layout_marginTop="80dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_balance_enq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balanceenq"
        tools:ignore="MissingConstraints"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/rippleeffect" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_withdrawl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cashwithdrawl"
        tools:ignore="MissingConstraints"
        android:textColor="@color/white"
        android:scrollbarSize="15sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rippleeffect" />
    </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>