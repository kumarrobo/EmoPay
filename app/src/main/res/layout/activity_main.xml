<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.MainActivity"
    android:scrollbars="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:layout_alignParentBottom="true"
            android:background="@color/whiteTextColor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_movetobank"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/iconmtb"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:id="@+id/tv_movetobank"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:text="@string/move_to_bank"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_person"
                            android:layout_gravity="center"
                            android:background="@drawable/profilebg"/>

                        <TextView
                            android:id="@+id/tv_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:text="@string/profile"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_qrcode"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/iconqresize"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"/>

                        <TextView
                            android:id="@+id/tv_qrcode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:text="@string/qr_code"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_wallet"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/iconwallet"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:paddingTop="10dp"/>

                        <TextView
                            android:id="@+id/tv_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:text="@string/wallet"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_history"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/iconhistory"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:paddingTop="5dp"/>

                        <TextView
                            android:id="@+id/tv_history"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:text="@string/history"
                            android:gravity="center"
                            android:textColor="@color/black" />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_alignParentTop="true"
            android:layout_above="@id/linearLayout_bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/card_view_image"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:src="@drawable/iconr"
                                            android:scaleType="centerInside"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textSize="12sp"
                                            android:text="@string/recharge"
                                            android:gravity="center"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                        <ImageView
                                            android:id="@+id/card_view_image1"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/iconelectricity"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:textSize="12sp"
                                            android:text="@string/electricity"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                        <ImageView
                                            android:id="@+id/card_view_image2"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/dthicon"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="12sp"
                                            android:text="@string/dth"
                                            android:gravity="center"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                        <ImageView
                                            android:id="@+id/card_view_image3"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/gasicon"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title3"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="12sp"
                                            android:text="@string/gas"
                                            android:gravity="center"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/card_view_image4"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/watericon"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_margin="10dp"
                                            android:textSize="12sp"
                                            android:text="@string/water"
                                            android:gravity="center"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/card_view_image5"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/moneytransfericon"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title5"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="10dp"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="10sp"
                                            android:text="@string/moneytransfer"
                                            android:gravity="center"
                                            android:singleLine="true"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/card_view_image6"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/insuranceicon" />

                                        <TextView
                                            android:id="@+id/card_view_image_title6"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_margin="10dp"
                                            android:gravity="center"
                                            android:text="@string/insurance"
                                            android:textSize="12sp"
                                            android:singleLine="true"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/card_view_image7"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/pancardicon"/>

                                        <TextView
                                            android:id="@+id/card_view_image_titl7"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="10dp"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="10sp"
                                            android:text="@string/pancard"
                                            android:singleLine="true"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                        <androidx.cardview.widget.CardView
                           android:id="@+id/cv_aeps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                        <ImageView
                                            android:id="@+id/card_view_image8"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/iconaeps"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title8"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="12sp"
                                            android:text="@string/aeps"
                                            android:gravity="center"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                        <ImageView
                                            android:id="@+id/card_view_image9"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/imgsize"
                                            android:src="@drawable/insuranceenrolicon"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title9"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="12sp"
                                            android:text="@string/insuranceenvt"
                                            android:gravity="start"
                                            android:singleLine="true"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                        <ImageView
                                            android:id="@+id/card_view_image10"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/imgsize"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/icondthbookingicon"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title10"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="10sp"
                                            android:text="@string/dthbooking"
                                            android:gravity="start"
                                            android:singleLine="true"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp"
                            android:layout_weight="1"
                            android:visibility="invisible">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/card_view_image11"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_person"/>

                                        <TextView
                                            android:id="@+id/card_view_image_title11"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="5dp"
                                            android:layout_gravity="center_horizontal"
                                            android:textSize="12sp"
                                            android:text="Recharge"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                </LinearLayout>
        </LinearLayout>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>